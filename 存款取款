import java.util.Scanner;
public class Account {
    private String name;
    private double balance;
    public Account(String name){
        this.name=name;
        this.balance=0;
    }
    public String getName(){
        return name;
    }
    public double balance(){
        System.out.println("账户余额:"+balance);
        return balance;
    }
    public boolean put(double value){
        this.balance=value+this.balance;
        return true;
    }
    public double get(double value){
        if(balance>=value){
            System.out.println("恭喜你！取款成功");
            System.out.println("剩余金额为:"+(balance-value));
            return balance-value;
        }
        else{
            System.out.println("取款失败，金额不足");
            return value;
        }
    }
    public static void main(String[] args){
        Account a1=new Account("张三");
        Scanner scan1=new Scanner(System.in);
        double c=scan1.nextInt();
        a1.put(c);
        System.out.println("姓名:"+a1.name);
        System.out.println("当前金额为:"+a1.balance);
        Scanner scan2=new Scanner(System.in);
        double x=scan2.nextInt();
        a1.get(x);
    }
}

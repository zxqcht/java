import java.util.Scanner;
abstract class Figure {
    public double point(int x,int y){
        return Math.sqrt(x*x+y*y);
    }
    public String toString;
    public static void main(String[] args){
        int c,z,x;
        double r1;
        ClosedFigure c1,c2;
        Scanner sc1 =new Scanner(System.in);
        String str1=sc1.nextLine();
        Scanner sc2 =new Scanner(System.in);
        String str2=sc2.nextLine();
        Scanner s1 =new Scanner(System.in);
        Scanner s2 =new Scanner(System.in);
        Scanner s3 =new Scanner(System.in);
        Scanner s4 =new Scanner(System.in);
        c=s1.nextInt();
        z=s2.nextInt();
        x=s3.nextInt();
        r1=s4.nextDouble();
        c1=new Circle(str1,r1);
        c1.print();
        c2=new Triangle(str2,c,z,x);
        c2.print();
        IArea ar1=new Circle("yuan",9);//用接口引用一个圆类对象
        ar1.getArea();
        IPerimeter[] a=new IPerimeter[3];
        a[0]=new Circle("YUAN",6);
        a[1]=new Triangle("sanjiao",5,12,13);
        a[2]=new Rectangle("juxing",7,8);
        for(int i=0;i<3;i++){
            a[i].getPerimeter();
            if(a[i] instanceof IArea){
                ((IArea)a[i]).getArea();
            }
        }
    }
}
abstract class ClosedFigure extends Figure{
    public String shape;
    public ClosedFigure(String shape){
        this.shape=shape;
    }
    abstract double perimeter();
    abstract double area();
    public void print(){
        System.out.println("图形为"+this.shape+"周长为"+this.perimeter()+"面积为"+this.area());
    }
}
class Line extends Figure {
    double a,b;
    public Line(String shape,double x,double y){
        this.a=x;
        this.b=y;
    }
    public double length(){
        return Math.sqrt(a*a+b*b);
    }

}
class Rectangle extends ClosedFigure implements IArea,IPerimeter{
    public Rectangle(String shape) {
        super(shape);
    }
    double length;
    double width;
    public Rectangle(String shape,double length,double width){
        super(shape);
        this.length=length;
        this.width=width;
    }
    double perimeter(){
        return 2*(length+width);
    }
    double area(){
        return length*width;
    }
    public void getArea(){//接口类 方法重写
        System.out.println("面积为"+length*width);
    }
    public void getPerimeter(){
        System.out.println("周长为"+2*(length+width));
    }
}
abstract class Square extends Rectangle{
    public Square(String shape) {
        super(shape);
    }
}
abstract class Ellipse extends Rectangle{
    public Ellipse(String shape) {
        super(shape);
    }
}
class Circle extends Ellipse implements IArea,IPerimeter{
    public Circle(String shape) {
        super(shape);
    }
    double radius;
    public Circle(String shape, double radius) {
        super(shape);
        this.radius = radius;
    }
    double perimeter(){
        return 2*Math.PI*radius;
    }
    double area(){
        return Math.PI*radius*radius;
    }
    public void getArea(){
        System.out.println("面积为"+Math.PI*radius*radius);
    }
    public void getPerimeter(){
        System.out.println("周长为"+Math.PI*radius*2);
    }
}
class Triangle extends ClosedFigure implements IArea,IPerimeter{
    public Triangle(String shape) {
        super(shape);
    }
    double l1,l2,l3;
    public Triangle(String shape,int a,int b,int c){
        super(shape);
        this.l1=a;
        this.l2=b;
        this.l3=c;
    }
    double perimeter(){
        return l1+l2+l3;
    }
    double area(){
        return Math.sqrt((l1+l2+l3)/2*((l1+l2+l3)/2-l1)*((l1+l2+l3)/2-l2)*((l1+l2+l3)/2-l3));
    }
    public void getArea(){
        System.out.println("三角面积为"+Math.sqrt((l1+l2+l3)/2*((l1+l2+l3)/2-l1)*((l1+l2+l3)/2-l2)*((l1+l2+l3)/2-l3)));
    }
    public void getPerimeter(){
        System.out.println("周长为"+l1+l2+l3);
    }
}
 class EquilateralTriangle extends Triangle{
    public EquilateralTriangle(String shape) {
        super(shape);
    }
}
 class RightAngledTriangle extends Triangle{
    public  RightAngledTriangle(String shape) {
        super(shape);
    }
}
abstract class Pdygon extends ClosedFigure{
    public Pdygon(String shape) {
        super(shape);
    }
}
abstract class RegularPolygon extends Pdygon{
    public RegularPolygon(String shape) {
        super(shape);
    }
}
abstract class Pentagram extends RegularPolygon{
    public Pentagram(String shape) {
        super(shape);
    }
}

